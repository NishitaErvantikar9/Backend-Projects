<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
      integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="stylesheets/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>My Tasker App</title>

  </head>

  <body>
    <div class="task-container">
      <h2> My Tasker</h2><br />
      <div class="add-task-conatiner">
        <form method="POST" action="submit">
          <input type="text" name="task">
          <input type="submit" value="Add" />
        </form>
      </div>
      <ul>
        <% taskscollection.forEach(details=> { %>
          <li>
            <div>
              <%=  details.content %>
                <a href="/remove/<%= details._id %>" class="remove"><span class="fas fa-trash"></span></a>
                <a href=" /edit/<%=details._id %>" class="edit"><span class="fas fa-pen"></span></a>
            </div>
          </li>
          <% }) %>
      </ul>
    </div>
  </body>

</html>
